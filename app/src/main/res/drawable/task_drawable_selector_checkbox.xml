<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_checked="false">
        <shape android:shape="oval" android:useLevel="false">
            <stroke android:width="2.5dp" android:color="#D93030" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="ring" android:useLevel="false">
            <stroke android:width="4dp" android:color="#D11777" />
            <solid android:color="#D11777" />
        </shape>
    </item>

</selector>