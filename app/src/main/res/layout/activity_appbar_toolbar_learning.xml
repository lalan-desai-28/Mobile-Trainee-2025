<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".appbar_toolbar.AppbarToolbarLearning">

    <Button
        android:id="@+id/simple_action_bar_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simple Action Bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/simple_tool_bar_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simple Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_action_bar_button" />


    <Button
        android:id="@+id/collapsing_toolbar_coordinatorlayout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CollapsingToolbar and CoordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simple_tool_bar_button" />

</androidx.constraintlayout.widget.ConstraintLayout>