<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Gallery -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Camera -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />


    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Notification -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Alarm -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Network States -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Receive SMS -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_Learning"
        tools:targetApi="31">
        <activity
            android:name=".broadcast.BroadcastLearning"
            android:exported="false" />
        <activity
            android:name=".workmanager.WorkManagerLearning"
            android:exported="false" />
        <activity
            android:name=".multithreading.MultiThreadingLearning"
            android:exported="false" />

        <service
            android:name=".notification_fcm.FCMService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".notification_fcm.NotificationAndFCMLearning"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".map.MapLearning"
            android:exported="false" />
        <activity
            android:name=".retrofit.GetRequestExampleActivity"
            android:exported="false" />
        <activity
            android:name=".webview.WebViewLearning"
            android:exported="false" />
        <activity
            android:name=".sharedpreferences.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".sharedpreferences.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".permissions.RuntimePermissionsLearning"
            android:exported="false" />
        <activity
            android:name=".intent.activities.ImageIntent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/png" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intent.activities.AudioIntent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/mpeg" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intent.IntentLearning"
            android:exported="false" />
        <activity
            android:name=".recyclerview_with_room.RecyclerViewLearning"
            android:exported="false" />
        <activity
            android:name=".fragments.FragmentsLearning"
            android:exported="false" />
        <activity
            android:name=".dialog.DialogLearning"
            android:exported="false" />
        <activity
            android:name=".font.FontLearning"
            android:exported="false" />
        <activity
            android:name=".snackbar_fab.fab.FABExample"
            android:exported="false" />
        <activity
            android:name=".snackbar_fab.snackbar.SnackbarExamples"
            android:exported="false" />
        <activity
            android:name=".snackbar_fab.SnakckbarAndFABLearning"
            android:exported="false" />
        <activity
            android:name=".appbar_toolbar.collapsing.CollapsingToolbarAndCoordinatorLayout"
            android:exported="false" />
        <activity
            android:name=".appbar_toolbar.toolbar.SimpleToolbar"
            android:exported="false" />
        <activity
            android:name=".appbar_toolbar.actionbar.SimpleActionBar"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".appbar_toolbar.AppbarToolbarLearning"
            android:exported="false" />
        <activity android:name=".viewpager.ViewPagerActivity" />
        <activity
            android:name=".dimensions.responsive_blog.ResponsiveBlogActivity"
            android:exported="false" />
        <activity
            android:name=".dimensions.DimensionsLearning"
            android:exported="false" />
        <activity
            android:name=".drawable.DrawableActivity"
            android:exported="false" />
        <activity
            android:name=".layout.design.DesignActivity"
            android:exported="false" />
        <activity
            android:name=".layout.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".layout.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".layout.LayoutLearning"
            android:exported="false" />
        <activity
            android:name=".activity.ActivityLearning"
            android:exported="false" />
        <activity
            android:name=".activity.data_pass.SecondActivity"
            android:exported="false" />
        <activity
            android:name=".activity.lifecycle.LifeCycleActivity"
            android:exported="false" />
        <activity
            android:name=".activity.data_pass.DataPassActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".notification_fcm.Notification" />

        <receiver
            android:name=".broadcast.SMSReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcast.CustomReceiver" />

    </application>

</manifest>